assumeStandardLibraryStripMargin = true
newlines.neverInInterpolations = true
maxColumn = 40
<<< single line string interpolation
val msg = s"${mkString(aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa)}"
>>>
val msg =
  s"${mkString(aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa)}"
<<< multiline string interpolation
val msg = s"""
  ${mkString(aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa)}
      """
>>>
val msg = s"""
  ${mkString(aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa)}
      """
<<< multiline margin string interpolation
object foo { val msg =
s"""
|${mkString(aaaaaaaaaaaaaaaaaaaaaaaa)}
        |""".stripMargin
}
>>>
object foo {
  val msg =
    s"""
       |${mkString(aaaaaaaaaaaaaaaaaaaaaaaa)}
       |""".stripMargin
}
